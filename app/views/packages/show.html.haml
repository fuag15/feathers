- content_for :title do
  Showing Package
%center
  %p
    = @package.version
  %p
    = @package.file.url
.btn-group.pull-left
  = link_to 'back', project_packages_path(@package.projects.first), class: 'btn'
  = link_to 'edit', edit_project_package_path(@package.projects.first, @package), class: 'btn btn-primary'
= button_to 'destroy', [@package.projects.first, @package], method: :delete, class: 'btn btn-danger pull-right'