- content_for :browser do
  \/dev/boone/clients/#{@job.name}
- content_for :title do
  = @job.name
  = render partial: 'shared/authentication'
- if current_user.present? and current_user.admin?
  .btn-group.pull-right
    = link_to 'edit job', edit_job_category_job_path(@job.job_category, @job), class: 'btn'
    = link_to 'manage pictures', job_pictures_path(@job), class: 'btn'
  = button_to 'destroy job', job_path(@job), method: :destroy, class: 'btn btn-danger'
  .clear
#projectDetailImage
  - if @job.pictures.present?
    = link_to @job.pictures.first.image.url(:bestfit), class: 'lightbox', rel: "job_#{@job.id}" do
      = image_tag @job.pictures.first.image.url(:bestfit)
#projectDetailSubImageHolder
  - @job.pictures.each do |picture|
    #projectDetailSubImage
      = link_to picture.image.url(:bestfit), class: 'lightbox', rel: "job_#{@job.id}" do
        = image_tag picture.image.url(:small)
  #clear
= markdown @job.detail
%br
%br
#employerTag
  Employer: #{@job.employer}
#clear