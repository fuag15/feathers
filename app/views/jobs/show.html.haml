- content_for :browser do
  \/dev/boone/clients/#{@job.name}
- content_for :title do
  = @job.version
  = render partial: 'shared/authentication'
- if current_user.admin?
  = link_to 'edit job', edit_job_category_job_path(@job.job_category, @job)
  = button_to 'destroy job', destroy_job_path(@job), method: :destroy
#projectDetailImage
  = link_to @job.pictures.first.image.url(:bestfit)
    = image_tag @job.pictures.first.image.url(:bestfit)
#projectDetailSubImageHolder
  - @job.pictures.each do |picture|
    #projectDetailSubImage
      = link_to picture.image.url(:bestfit)
        = image_tag picture.image.url(:small)
  #clear
= @job.detail
%br
%br
#employerTag
  Employer: #{@job.employer}
#clear